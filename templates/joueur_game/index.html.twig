{% extends 'base.html.twig' %}

{% block title %}Hello JoueurGameController!{% endblock %}

{% block body %}
    <section>
        <h1>Game {{ game.id }}</h1>
        <h1> Periode :
            {% if game.periode == 1 %}
                Janvier
            {% elseif game.periode == 2 %}
                FÃ©vrier
            {% elseif game.periode == 3 %}
                Mars
            {% endif %}
        </h1>
        <h2>Phase : {{ game.phase }}</h2>

        <div id="phase-joueur-{{ game.id }}" {{ turbo_stream_listen('game-joueur/'~game.id) }}>
            {% if game.phase == '1a' %}
                {{ include('phase1_a/joueur_phase1a.stream.html.twig') }}
            {% elseif game.phase == '1b' %}
                {{ include('phase1_b/joueur_phase1b.stream.html.twig') }}
            {% endif %}
        </div>
    </section>
{% endblock %}
